#include <stdio.h>

int main() {
    int num, reversed = 0, remainder;

    // Ask user for input
    printf("Enter an integer: ");
    scanf("%d", &num);

    // Reverse the number
    while (num != 0) {
        remainder = num % 10;
        reversed = reversed * 10 + remainder;
        num /= 10;
    }

    // Output the reversed number
    printf("Reversed number: %d\n", reversed);

    return 0;
}
